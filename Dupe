-- Steal a Brainrot | Highest Money/s ESP (Executor)

local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

local Debris = workspace:WaitForChild("Debris", 5)
local Plots = workspace:FindFirstChild("Plots")

if not Debris or not Plots then
	warn("Debris or Plots not found")
	return
end

-- Remove old highlight
for _, v in ipairs(CoreGui:GetChildren()) do
	if v.Name == "BestBrainrotESP" then
		v:Destroy()
	end
end

-- Highlight
local highlight = Instance.new("Highlight")
highlight.Name = "BestBrainrotESP"
highlight.FillTransparency = 0.65
highlight.OutlineTransparency = 0
highlight.OutlineColor = Color3.fromRGB(255, 0, 0)
highlight.FillColor = Color3.fromRGB(255, 80, 80)
highlight.Parent = CoreGui

-- Money parser
local function parseMoney(text)
	if not text then return 0 end
	text = text:upper():gsub(",", ""):gsub("/S", "")

	local num = tonumber(text:match("[%d%.]+"))
	if not num then return 0 end

	if text:find("K") then return num * 1e3 end
	if text:find("M") then return num * 1e6 end
	if text:find("B") then return num * 1e9 end
	if text:find("T") then return num * 1e12 end

	return num
end

-- Find brainrot model in plots by name
local function findBrainrotByName(name)
	name = name:lower()

	for _, plot in ipairs(Plots:GetDescendants()) do
		if plot:IsA("Model") then
			if plot.Name:lower():find(name) then
				return plot
			end
		elseif plot:IsA("BasePart") then
			if plot.Name:lower():find(name) then
				return plot
			end
		end
	end

	return nil
end

local lastBestName = nil
local lastBestValue = 0

local function scan()
	local bestValue = 0
	local bestName = nil

	for _, obj in ipairs(Debris:GetDescendants()) do
		if obj.Name == "AnimalOverhead" then
			local nameLabel = obj:FindFirstChild("Name", true)
			local genLabel = obj:FindFirstChild("Generation", true)

			if nameLabel and genLabel
				and nameLabel:IsA("TextLabel")
				and genLabel:IsA("TextLabel") then

				local brainrotName =
					nameLabel.ContentText ~= "" and nameLabel.ContentText
					or nameLabel.Text

				local genText =
					genLabel.ContentText ~= "" and genLabel.ContentText
					or genLabel.Text

				local value = parseMoney(genText)

				if value > bestValue then
					bestValue = value
					bestName = brainrotName
				end
			end
		end
	end

	if bestName and bestValue > 0 then
		local target = findBrainrotByName(bestName)
		if target then
			highlight.Adornee = target

			if bestName ~= lastBestName or bestValue ~= lastBestValue then
				print("ðŸ”¥ BEST BRAINROT FOUND ðŸ”¥")
				print("Name:", bestName)
				print("Money/s:", bestValue)
				print("------------------------")

				lastBestName = bestName
				lastBestValue = bestValue
			end
		end
	end
end

-- Loop
task.spawn(function()
	while true do
		pcall(scan)
		task.wait(1)
	end
end)